<%= link_to('<< Back to List', pages_path, class: 'back-link') %>

<div class="page edit">
  <h2>Update page</h2>

  <%= form_for(@page) do |f| %>
    <table summary="page form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Subject</th>
        <td><%= f.collection_select :subject_id, Subject.all, :id, :name %></td>
      </tr>
      <tr>
        <th>Permalink</th>
        <td><%= f.text_field(:permalink) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.check_box(:visible) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit('Update page') %>
    </div>
  <% end %>
</div>
