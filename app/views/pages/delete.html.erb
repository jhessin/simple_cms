<%= link_to('<< Back to List', pages_path(subject_id: @subject.id), class: 'back-link') %>

<div class="pages show">
  <h2>Delete Page</h2>

  <%= render partial: 'table' %>

  <%= form_for(@page, url: page_path(@page, subject_id: @subject.id), method:
               'delete') do |f| %>
    <p>Are you sure you want to permanently delete this page?</p>

    <div class="form-buttons">
      <%= f.submit("Delete page") %>
    </div>

  <% end %>
</div>
