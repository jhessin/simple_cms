<%= link_to('<< Back to List', pages_path, class: 'back-link') %>

<div class="pages show">
  <h2>Delete Page</h2>

  <table summary="page detail view">
    <tr>
      <th>Name</th>
      <td><%= @page.name %></td>
    </tr>
    <tr>
      <th>Subject</th>
      <td><%= @page.subject.name %></td>
    </tr>
    <tr>
      <th>permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @page.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at %></td>
    </tr>
  </table>

  <%= form_for(@page, method: 'delete') do |f| %>
    <p>Are you sure you want to permanently delete this page?</p>

    <div class="form-buttons">
      <%= f.submit("Delete page") %>
    </div>

  <% end %>
</div>
