<%= link_to('<< Back to List', sections_path, class: 'back-link') %>

<div class="section new">
  <h2>Create section</h2>

  <%= form_for(@section) do |f| %>
    <table summary="section form fields">
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Page</th>
        <td><%= f.collection_select :page_id, Page.all, :id, :name %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.check_box(:visible) %></td>
      </tr>
      <tr>
        <th>Content Type</th>
        <td><%= f.text_field(:content_type) %></td>
      </tr>
      <tr>
        <th>Content</th>
        <td><%= f.text_area(:content) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit('Create section') %>
    </div>
  <% end %>
</div>
