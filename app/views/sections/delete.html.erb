<%= link_to('<< Back to List', sections_path(page_id: @page.id), class: 'back-link') %>

<div class="sections show">
  <h2>Show section</h2>

  <%= render partial: 'table' %>

  <%= form_for(@section, url: section_path(@section, page_id: @page.id), method: 'delete') do |f| %>
    <p>Are you sure you want to permanently delete this section?</p>

    <div class="form-buttons">
      <%= f.submit("Delete section") %>
    </div>

  <% end %>
</div>
