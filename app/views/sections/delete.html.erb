<%= link_to('<< Back to List', sections_path, class: 'back-link') %>

<div class="sections show">
  <h2>Show section</h2>

  <table summary="section detail view">
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @section.updated_at %></td>
    </tr>
  </table>

  <%= form_for(@section, method: 'delete') do |f| %>
    <p>Are you sure you want to permanently delete this section?</p>

    <div class="form-buttons">
      <%= f.submit("Delete section") %>
    </div>

  <% end %>
</div>
